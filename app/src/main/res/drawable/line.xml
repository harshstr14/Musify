<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Size: 146 x 1 (you can override width/height in layout if needed) -->
    <size
        android:width="146dp"
        android:height="1dp" />

    <!-- Rounded ends similar to stroke-linecap="round" -->
    <corners android:radius="0.5dp" />

    <!-- Left-to-right gradient: #B0B0B0 -> #D3D3D3 -->
    <gradient
        android:startColor="#B0B0B0"
        android:endColor="#D3D3D3"
        android:angle="0" />
</shape>

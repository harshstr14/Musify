<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#121212"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottomNavBar"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/bottomNavBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#1C1C1c"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/navBar_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tint="#F4F4F4"
            android:padding="10dp"
            android:layout_marginHorizontal="12dp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/home_selector"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/navBar_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tint="#F4F4F4"
            android:padding="10dp"
            android:layout_marginHorizontal="12dp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/search_selector"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/navBar_favourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tint="#F4F4F4"
            android:padding="10dp"
            android:layout_marginHorizontal="12dp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/heart_selector"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/navBar_playlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tint="#F4F4F4"
            android:padding="10dp"
            android:layout_marginHorizontal="12dp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/explore_selector"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/navBar_myPlayList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tint="#F4F4F4"
            android:padding="10dp"
            android:layout_marginHorizontal="12dp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/create_playlist_selector"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
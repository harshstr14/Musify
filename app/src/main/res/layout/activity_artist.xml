<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#121212"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ArtistActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/backArrowIconImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:rotation="180"
        android:padding="15dp"
        app:tint="#F8F9FA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow_icon" />

<!--    <androidx.appcompat.widget.AppCompatImageView-->
<!--        android:id="@+id/shareIconImage"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginEnd="20dp"-->
<!--        android:padding="15dp"-->
<!--        app:tint="#F8F9FA"-->
<!--        app:layout_constraintBottom_toBottomOf="@+id/backArrowIconImage"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintTop_toTopOf="@+id/backArrowIconImage"-->
<!--        app:srcCompat="@drawable/share" />-->

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="visible"
        android:indeterminateTint="#34A853"
        app:layout_constraintTop_toBottomOf="@id/backArrowIconImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/miniPlayer"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/miniPlayer"
        app:layout_constraintTop_toBottomOf="@+id/backArrowIconImage">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView"
                android:layout_width="215dp"
                android:layout_height="215dp"
                android:scaleType="centerCrop"
                app:civ_border_color="#FF000000"
                app:civ_border_width="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/artistNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/merriweathersans_semibold"
                android:maxLines="1"
                android:text="Artist Name"
                android:textColor="#F8F9FA"
                android:textSize="20sp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/verifiedImage"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="4dp"
                app:layout_constraintBottom_toBottomOf="@+id/artistNameTextView"
                app:layout_constraintStart_toEndOf="@+id/artistNameTextView"
                app:layout_constraintTop_toTopOf="@+id/artistNameTextView"
                app:srcCompat="@drawable/verified" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/favouriteIcon1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/heart_selector"
                app:layout_constraintBottom_toBottomOf="@+id/listenerText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/listenerText"
                app:tint="#34A853" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/appCompatImageView4"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="1dp"
                android:layout_marginStart="18dp"
                app:layout_constraintBottom_toBottomOf="@+id/followersText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/followersText"
                app:srcCompat="@drawable/followers"
                app:tint="#707B81" />

            <TextView
                android:id="@+id/followersText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/merriweathersans_regular"
                android:text="Followers"
                android:textColor="#707B81"
                android:textSize="12sp"
                android:layout_marginTop="18dp"
                app:layout_constraintStart_toEndOf="@+id/appCompatImageView4"
                app:layout_constraintTop_toBottomOf="@+id/artistNameTextView" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/appCompatImageView5"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintBottom_toBottomOf="@+id/listenerText"
                app:layout_constraintEnd_toStartOf="@+id/listenerText"
                app:layout_constraintTop_toTopOf="@+id/listenerText"
                app:srcCompat="@drawable/headset"
                app:tint="#707B81" />

            <TextView
                android:id="@+id/listenerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/merriweathersans_regular"
                android:text="Listeners"
                android:textColor="#707B81"
                android:textSize="12sp"
                android:layout_marginStart="32dp"
                app:layout_constraintBottom_toBottomOf="@+id/followersText"
                app:layout_constraintStart_toEndOf="@+id/followersText"
                app:layout_constraintTop_toTopOf="@+id/followersText" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:fontFamily="@font/merriweathersans_semibold"
                android:text="Top Songs"
                android:textColor="#F8F9FA"
                android:textSize="15sp"
                android:layout_marginTop="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/listenerText" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/topSongsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="880dp"
                android:layout_marginTop="5dp"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="false"
                android:orientation="vertical"
                android:scrollbars="none"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView11"
                tools:listitem="@layout/item_suggestions" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/merriweathersans_semibold"
                android:text="Top Albums"
                android:textColor="#F8F9FA"
                android:textSize="15sp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/topSongsRecyclerView" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/topAlbumsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:layout_marginTop="5dp"
                android:paddingStart="18dp"
                android:paddingEnd="0dp"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@id/textView16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView15"
                tools:listitem="@layout/item_songs" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/merriweathersans_semibold"
                android:text="Singles"
                android:textColor="#F8F9FA"
                android:textSize="15sp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/topAlbumsRecyclerView" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/singlesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:layout_marginTop="5dp"
                android:clipToPadding="false"
                android:paddingStart="18dp"
                android:paddingEnd="0dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:nestedScrollingEnabled="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView16"
                tools:listitem="@layout/item_songs" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <include layout="@layout/mini_player"
        android:id="@+id/miniPlayer"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>